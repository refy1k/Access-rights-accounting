<Page x:Class="Access_rights_accounting.Pages.Workspace.EmployeePages.ApplicationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Access_rights_accounting.Pages.Workspace.EmployeePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApplicationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Border Background="#EADCCE" Margin="10">
                    <StackPanel Margin="10 5">
                        <TextBlock Text="Калькулятор" FontSize="30"/>
                        <Image Source="/Resources/calculator.png" Height="150" Margin="5"/>
                        <Button Content="Открыть" Margin="5" Padding="10" Name="Calculator" Click="Calculator_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="#EADCCE" Margin="10">
                    <StackPanel Margin="10 5">
                        <TextBlock Text="Браузер" FontSize="30"/>
                        <Image Source="/Resources/browser.png" Height="150" Margin="5"/>
                        <Button Content="Открыть" Margin="5" Padding="10" Name="Browser" Click="Browser_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="#EADCCE" Margin="10">
                    <StackPanel Margin="10 5">
                        <TextBlock Text="Настройки" FontSize="30"/>
                        <Image Source="/Resources/settings.png" Height="150" Margin="5"/>
                        <Button Content="Открыть" Margin="5" Padding="10" Name="Setting" Click="Setting_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
