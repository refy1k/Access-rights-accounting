<Page x:Class="Access_rights_accounting.Pages.Workspace.MainWorkSpace"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Access_rights_accounting.Pages.Workspace"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWorkSpace">

    <Grid Background="#640909">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="#2E0303" CornerRadius="0 20 20 0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Image Source="/Resources/ESecure_logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Height="60" Margin="10"/>
                    <TextBlock Text="ESC" FontSize="45" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Page>
