<Page x:Class="Access_rights_accounting.Pages.Loading_Pages.SplashWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Access_rights_accounting.Pages.Loading_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SplashWindow">

    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#951111" Offset="0.0" />
                    <GradientStop Color="#640909" Offset="0.25" />
                    <GradientStop Color="#2E0303" Offset="0.75" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="66,0,0,0">
            <Image Source="/Resources/ESecure_logo.png" Height="150"/>
            <StackPanel>
                <TextBlock Style="{StaticResource IntroText}" Text="Culture of"/>
                <TextBlock Style="{StaticResource IntroText}" Text="cyber secure"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
